<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/mobvista_reward_black" >

    <RelativeLayout
        android:id="@+id/mobvista_reward_rl_play_page"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
       >

        <com.mobvista.msdk.playercommon.PlayerView
            android:id="@+id/mobvista_reward_vfpv"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent" >
        </com.mobvista.msdk.playercommon.PlayerView>
    </RelativeLayout>

    <TextView
        android:id="@+id/mobvista_reward_tv_sound"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_margin="10dp"
        android:background="@drawable/mobvista_reward_shape_progress"
        android:gravity="center"
        android:textColor="@color/mobvista_reward_white"
        android:textSize="12sp"
        android:visibility="gone" />

    <com.mobvista.msdk.reward.view.SoundImageView
        android:id="@+id/mobvista_reward_sound_switch"
        android:layout_width="25dp"
        android:layout_height="25dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:layout_margin="10dp" />

    <com.mobvista.msdk.mvjscommon.windvane.WindVaneWebView
        android:id="@+id/mobvista_reward_wv_screen"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="invisible" />

    <LinearLayout
        android:id="@+id/mobvista_reward_ll_end"
        android:layout_width="fill_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:visibility="gone" >

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent" >

            <com.mobvista.msdk.videocommon.view.MyImageView
                android:id="@+id/mobvista_reward_myiv_bg"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scaleType="fitCenter" />

            <View
                android:id="@+id/mobvista_reward_view_cover"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="#000000" />

            <FrameLayout
                android:id="@+id/mobvista_reward_fl"
                android:layout_width="match_parent"
                android:layout_height="match_parent" >

                <RelativeLayout
                    android:id="@+id/mobvista_reward_rl_layout_rotate"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center" >

                    <ImageView
                        android:id="@+id/mobvista_reward_iv_rotate"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerHorizontal="true"
                        android:src="@drawable/mobvista_reward_end_rotation"
                        android:visibility="invisible" />

                    <com.mobvista.msdk.videocommon.view.MyImageView
                        android:id="@+id/mobvista_reward_myiv_icon"
                        android:layout_width="80dp"
                        android:layout_height="80dp"
                        android:layout_centerInParent="true"
                        android:scaleType="fitXY"
                        android:visibility="invisible" />

                    <com.mobvista.msdk.videocommon.view.MyImageView
                        android:id="@+id/mobvista_reward_myiv_icon_visible"
                        android:layout_width="80dp"
                        android:layout_height="80dp"
                        android:layout_centerInParent="true"
                        android:scaleType="fitXY"
                        android:visibility="invisible" />
                </RelativeLayout>

                <LinearLayout
                    android:id="@+id/mobvista_reward_ll_bottom_install"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="bottom"
                    android:gravity="center"
                    android:orientation="vertical" >

                    <TextView
                        android:id="@+id/mobvista_reward_tv_title"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Royal Revolt 2"
                        android:textSize="18sp"
                        android:textStyle="bold"
                        android:visibility="invisible" />

                    <com.mobvista.msdk.videocommon.view.StarLevelView
                        android:id="@+id/mobvista_reward_star"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:paddingBottom="20dp"
                        android:visibility="invisible" />

                    <TextView
                        android:id="@+id/mobvista_reward_tv_install"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="10dp"
                        android:background="@drawable/mobvista_reward_shape_end_pager"
                        android:gravity="center"
                        android:paddingBottom="8dp"
                        android:paddingLeft="100dp"
                        android:paddingRight="100dp"
                        android:paddingTop="8dp"
                        android:text="Play Game"
                        android:textSize="18sp"
                        android:visibility="invisible" />
                </LinearLayout>
            </FrameLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom"
                android:layout_marginBottom="1dp"
                android:gravity="center"
                android:text="Mobvista."
                android:textColor="#ffffff"
                android:textSize="18sp" />
        </FrameLayout>
    </LinearLayout>

    <RelativeLayout
        android:id="@+id/mobvista_reward_rl_finish_close"
        android:layout_width="35dp"
        android:layout_height="35dp"
        android:layout_alignParentRight="true"
        android:layout_margin="10dp"
        android:background="@drawable/mobvista_reward_shape_progress"
        android:visibility="gone" >

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:src="@drawable/mobvista_reward_close" />
    </RelativeLayout>

    <ProgressBar
        android:id="@+id/mobvista_reward_pb"
        style="?android:attr/progressBarStyleLarge"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:visibility="gone" />

</RelativeLayout>